{
  "name": "security-sleuth-smythe",
  "version": "1.0.0",
  "description": "Personalized Security Review Framework for Smythe",
  "author": "Security Team",
  "license": "MIT",
  "scripts": {
    "dev": "hugo server -D",
    "build": "hugo --minify",
    "clean": "rimraf public resources",
    "check": "npm-check -u",
    "netlify:build": "npm run clean && hugo --gc --minify",
    "start": "hugo server -D --disableFastRender",
    "update:docs": "hugo --minify && echo 'Updated your documentation, Smythe!'",
    "test": "hugo check",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "backup": "scripts/backup-smythe-docs.sh"
  },
  "dependencies": {
    "@netlify/plugin-lighthouse": "6.0.1",
    "autoprefixer": "^10.4.16",
    "node": "^22.13.0",
    "postcss": "^8.4.31",
    "postcss-cli": "11.0.0"
  },
  "devDependencies": {
    "husky": "9.1.7",
    "lint-staged": "^15.1.0",
    "npm-check": "^6.0.1",
    "prettier": "^3.1.0",
    "prettier-plugin-go-template": "^0.0.15",
    "rimraf": "6.0.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "parser": "go-template"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/octokas/security-sleuth-smythe"
  },
  "keywords": [
    "hugo",
    "papermod",
    "security",
    "documentation",
    "netlify"
  ]
}
